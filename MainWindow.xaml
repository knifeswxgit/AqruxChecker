<Window x:Class="RustCheatChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AQRUX CHECKER" Height="800" Width="1500"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">
    <Window.Effect>
        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5" BlurRadius="15"/>
    </Window.Effect>
    <Window.Resources>
        <!-- Цветовая палитра (тёмная тема, темнее и красивее) -->
        <LinearGradientBrush x:Key="DarkBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1A1C1F" Offset="0"/>
            <GradientStop Color="#FF2A2E33" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="DarkPanelBackground" Color="#FF222529"/>
        <SolidColorBrush x:Key="DarkButtonBackground" Color="#FF2F3439"/>
        <SolidColorBrush x:Key="DarkButtonHoverBackground" Color="#FF3E454C"/>
        <SolidColorBrush x:Key="DarkButtonPressedBackground" Color="#FF4D555D"/>
        <SolidColorBrush x:Key="DarkTextForeground" Color="#FFE6E8EB"/>
        <SolidColorBrush x:Key="DarkBorderBrush" Color="#FF33383E"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FF5C6BC0"/>

        <!-- Светлая тема (чище и красивее) -->
        <LinearGradientBrush x:Key="LightBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFF7FAFC" Offset="0"/>
            <GradientStop Color="#FFEFF3F6" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="LightPanelBackground" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="LightButtonBackground" Color="#FFE2E8F0"/>
        <SolidColorBrush x:Key="LightButtonHoverBackground" Color="#FFCBD5E1"/>
        <SolidColorBrush x:Key="LightButtonPressedBackground" Color="#FFB7C5D6"/>
        <SolidColorBrush x:Key="LightTextForeground" Color="#FF1A202C"/>
        <SolidColorBrush x:Key="LightBorderBrush" Color="#FFD1DCE5"/>

        <!-- Текущая тема (по умолчанию тёмная) -->
        <LinearGradientBrush x:Key="WindowBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1A1C1F" Offset="0"/>
            <GradientStop Color="#FF2A2E33" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="PanelBackground" Color="#FF222529"/>
        <SolidColorBrush x:Key="ButtonBackground" Color="#FF2F3439"/>
        <SolidColorBrush x:Key="ButtonHoverBackground" Color="#FF3E454C"/>
        <SolidColorBrush x:Key="ButtonPressedBackground" Color="#FF4D555D"/>
        <SolidColorBrush x:Key="TextForeground" Color="#FFE6E8EB"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF33383E"/>

        <!-- Стиль для кнопок на левой панели -->
        <Style x:Key="SideButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextForeground}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.3" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                             VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ButtonHoverBackground}"/>
                    <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.9" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1.02" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1.02" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ButtonPressedBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопок в ToolsPanel -->
        <Style x:Key="ToolButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextForeground}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.3" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ButtonHoverBackground}"/>
                    <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.9" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1.02" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1.02" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ButtonPressedBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопки ScanButton -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.3" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF7986CB"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.9" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1.02" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1.02" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF4B5EAA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопки смены темы -->
        <Style x:Key="ThemeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextForeground}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="2" Opacity="0.3" BlurRadius="3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ButtonHoverBackground}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ButtonPressedBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопки закрытия -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEF4444"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1.1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1.1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFDC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для TextBlock -->
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextForeground}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="1" Opacity="0.2" BlurRadius="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для RichTextBox -->
        <Style x:Key="RichTextBoxStyle" TargetType="RichTextBox">
            <Setter Property="Background" Value="#FF1E2226"/>
            <Setter Property="Foreground" Value="{DynamicResource TextForeground}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.3" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RichTextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для SearchTextBox -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource PanelBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextForeground}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="2" Opacity="0.3" BlurRadius="3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для ProgressBar -->
        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Background" Value="{DynamicResource PanelBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="2" Opacity="0.3" BlurRadius="3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <Grid>
                                <Rectangle x:Name="PART_Indicator" HorizontalAlignment="Left" Fill="{TemplateBinding Foreground}" RadiusX="10" RadiusY="10"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для CheckBox -->
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextForeground}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Стиль для кнопки приветственного окна -->
        <Style x:Key="WelcomeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="2" Opacity="0.3" BlurRadius="3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF7986CB"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.9" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF4B5EAA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Основной контент -->
        <Border x:Name="MainContent" Background="{DynamicResource WindowBackground}" CornerRadius="20" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Кастомная панель заголовка -->
                <Border Background="{DynamicResource PanelBackground}" CornerRadius="20,20,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid>
                        <TextBlock Text="AQRUX CHECKER" Foreground="{DynamicResource TextForeground}" FontSize="18" FontFamily="Segoe UI" FontWeight="Bold"
                                   VerticalAlignment="Center" Margin="20,0,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="1" Opacity="0.3" BlurRadius="2"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="ThemeButton" Click="ThemeButton_Click" Style="{StaticResource ThemeButtonStyle}">
                                <Button.Content>
                                    <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4Z M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6Z"
                                          Fill="{DynamicResource TextForeground}" Stretch="Uniform" Width="20" Height="20"/>
                                </Button.Content>
                            </Button>
                            <Button x:Name="MinimizeButton" Width="40" Height="40" Click="MinimizeButton_Click" Background="Transparent">
                                <Button.Content>
                                    <Path Data="M0,0 H10" Stroke="{DynamicResource TextForeground}" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button.Content>
                            </Button>
                            <Button x:Name="MaximizeRestoreButton" Width="40" Height="40" Click="MaximizeRestoreButton_Click" Background="Transparent">
                                <Button.Content>
                                    <Path Data="M0,0 H10 V10 H0 Z" Stroke="{DynamicResource TextForeground}" StrokeThickness="2" Fill="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button.Content>
                            </Button>
                            <Button x:Name="CloseButton" Click="CloseButton_Click" Style="{StaticResource CloseButtonStyle}">
                                <Button.Content>
                                    <Grid Width="16" Height="16">
                                        <Path Data="M2,2 L14,14" Stroke="{DynamicResource TextForeground}" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                        <Path Data="M14,2 L2,14" Stroke="{DynamicResource TextForeground}" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                    </Grid>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Основное содержимое -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="266"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая панель с кнопками -->
                    <StackPanel x:Name="SidePanel" Background="{DynamicResource PanelBackground}" Opacity="0">
                        <Button x:Name="CheckFilesButton" Click="CheckFilesButton_Click" Style="{StaticResource SideButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M9,16.2L4.8,12L3.4,13.4L9,19L21,7L19.6,5.6L9,16.2Z" 
                                      Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                      Stretch="Uniform" Width="16" Height="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Проверка файлов"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="ProgramsButton" Click="ProgramsButton_Click" Style="{StaticResource SideButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4Z" 
                                      Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                      Stretch="Uniform" Width="16" Height="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Программы"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="SteamAccountsButton" Click="SteamAccountsButton_Click" Style="{StaticResource SideButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z" 
                                      Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                      Stretch="Uniform" Width="16" Height="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Аккаунты Steam"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="RegeditCheckButton" Click="RegeditCheckButton_Click" Style="{StaticResource SideButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z" 
                                      Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                      Stretch="Uniform" Width="16" Height="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Проверка Regedit"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="OpenFoldersButton" Click="OpenFoldersButton_Click" Style="{StaticResource SideButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z" 
                                      Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                      Stretch="Uniform" Width="16" Height="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Открытие папок"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="IpHistoryButton" Click="IpHistoryButton_Click" Style="{StaticResource SideButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z" 
                                      Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                      Stretch="Uniform" Width="16" Height="16" Margin="0,0,10,0"/>
                                <TextBlock Text="История IP"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SideButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z" 
                                      Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                      Stretch="Uniform" Width="16" Height="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Кнопка 7"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SideButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z" 
                                      Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                      Stretch="Uniform" Width="16" Height="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Кнопка 8"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Правая панель -->
                    <Grid Grid.Column="1" Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Панель сканирования -->
                        <StackPanel x:Name="ScanPanel" Visibility="Visible" Opacity="0">
                            <RichTextBox x:Name="FoundFilesText" Margin="0,0,0,15" Height="570" Style="{StaticResource RichTextBoxStyle}"/>
                            <ProgressBar x:Name="ScanProgressBar" Minimum="0" Maximum="100" Value="0" Style="{StaticResource ProgressBarStyle}" Visibility="Collapsed"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <CheckBox x:Name="QuickScanCheckBox" Content="Быстрое сканирование" Style="{StaticResource CheckBoxStyle}"/>
                                <Button x:Name="ScanButton" Content="Сканировать систему" Click="ScanButton_Click" Visibility="Collapsed" Style="{StaticResource ActionButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Панель программ -->
                        <StackPanel x:Name="ToolsPanel" Visibility="Collapsed" VerticalAlignment="Center" Opacity="0">
                            <Button Content="LastActivityView" Tag="LastActivityView.exe" Click="LaunchProgram_Click" Style="{StaticResource ToolButtonStyle}"/>
                            <Button Content="UsbDeview" Tag="UsbDeview.exe" Click="LaunchProgram_Click" Style="{StaticResource ToolButtonStyle}"/>
                            <Button Content="ShellBag Analyzer" Tag="shellbag_analyzer_cleaner.exe" Click="LaunchProgram_Click" Style="{StaticResource ToolButtonStyle}"/>
                            <Button Content="System Informer" Tag="SystemInformer.exe" Click="LaunchProgram_Click" Style="{StaticResource ToolButtonStyle}"/>
                        </StackPanel>

                        <!-- Панель аккаунтов Steam -->
                        <StackPanel x:Name="SteamAccountsPanel" Visibility="Collapsed" VerticalAlignment="Center" Opacity="0">
                            <RichTextBox x:Name="SteamAccountsText" Margin="0,0,0,15" Height="570" Style="{StaticResource RichTextBoxStyle}"/>
                        </StackPanel>

                        <!-- Панель истории IP -->
                        <StackPanel x:Name="IpHistoryPanel" Visibility="Collapsed" VerticalAlignment="Center" Opacity="0">
                            <RichTextBox x:Name="IpHistoryText" Margin="0,0,0,15" Height="570" Style="{StaticResource RichTextBoxStyle}"/>
                        </StackPanel>

                        <!-- Панель поиска -->
                        <StackPanel x:Name="SearchPanel" Grid.Row="1" Visibility="Collapsed" Margin="0,10,0,0">
                            <TextBox x:Name="SearchTextBox" TextChanged="SearchTextBox_TextChanged" Text="Поиск по найденным файлам..." Style="{StaticResource SearchTextBoxStyle}"/>
                        </StackPanel>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="StatusText" Text="Нажмите 'Проверка файлов' для начала" Margin="5,0" Style="{StaticResource StatusTextStyle}"/>
                            <TextBlock x:Name="CheckDateText" Grid.Column="1" Margin="5,0" Style="{StaticResource StatusTextStyle}"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <!-- Приветственное окно -->
        <Grid x:Name="WelcomeOverlay" Background="#80000000" Visibility="Collapsed" Opacity="0">
            <Border Background="{DynamicResource PanelBackground}" CornerRadius="20" Width="650" Height="400">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5" BlurRadius="15"/>
                </Border.Effect>
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock x:Name="WelcomeText" Text="Добро пожаловать в AQRUX CHECKER! 🚀" Foreground="{DynamicResource TextForeground}" FontSize="24" FontFamily="Segoe UI" FontWeight="Bold"
                                   HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Opacity="0">
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1" BeginTime="0:0:0.5"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)" From="20" To="0" Duration="0:0:1" BeginTime="0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                            <TextBlock.RenderTransform>
                                <TranslateTransform Y="20"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <Button x:Name="GenerateCodeButton" Content="Сгенерировать код" Style="{StaticResource WelcomeButtonStyle}" Margin="0,20,0,10" Click="GenerateCodeButton_Click"/>
                        <TextBlock Text="Введите одноразовый код:" Foreground="{DynamicResource TextForeground}" FontSize="16" FontFamily="Segoe UI" Margin="0,10,0,5" HorizontalAlignment="Center"/>
                        <TextBox x:Name="CodeTextBox" Width="300" Height="45" Style="{StaticResource SearchTextBoxStyle}" TextChanged="CodeTextBox_TextChanged" Margin="0,0,0,10"/>
                        <TextBlock Text="Введите ваш Steam ID:" Foreground="{DynamicResource TextForeground}" FontSize="16" FontFamily="Segoe UI" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                        <TextBox x:Name="SteamIdTextBox" Width="300" Height="45" Style="{StaticResource SearchTextBoxStyle}" TextChanged="SteamIdTextBox_TextChanged"/>
                        <Button x:Name="StartButton" Content="Начать" Click="CloseWelcomeOverlay_Click" HorizontalAlignment="Center" Margin="0,20,0,0" Style="{StaticResource WelcomeButtonStyle}" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>